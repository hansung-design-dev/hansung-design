# Supabase 설정
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
NEXT_PUBLIC_SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
PERIOD_GENERATION_SECRET=your_period_generation_secret

# 토스페이먼츠 설정
TOSS_PAYMENTS_SECRET_KEY=your_toss_secret_key
NEXT_PUBLIC_TOSS_PAYMENTS_CLIENT_KEY=your_toss_client_key

# 카카오페이 설정
KAKAO_PAY_ADMIN_KEY=your_kakao_pay_admin_key
NEXT_PUBLIC_KAKAO_PAY_CID=your_kakao_pay_cid

# 네이버페이 설정
NAVER_PAY_CLIENT_ID=your_naver_pay_client_id
NAVER_PAY_CLIENT_SECRET=your_naver_pay_client_secret

# 카카오맵 설정
NEXT_PUBLIC_KAKAO_KEY=your_kakao_map_javascript_key

# 기본 URL 설정
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# 테스트용 0원 결제 설정 (개발/스테이징 전용)
# 프로덕션에서는 반드시 false로 설정하거나 설정하지 않음
ENABLE_TEST_FREE_PAYMENT=false
TEST_FREE_PAYMENT_USER_ID=testsung
# 클라이언트 사이드에서도 0원 결제 표시를 위한 설정
NEXT_PUBLIC_ENABLE_TEST_FREE_PAYMENT=false
NEXT_PUBLIC_TEST_FREE_PAYMENT_USER_ID=testsung 

# NICE 휴대폰 인증 (server-only: 절대 NEXT_PUBLIC_ 붙이지 마세요)
NICE_CLIENT_ID=your_nice_client_id
NICE_CLIENT_SECRET=your_nice_client_secret
NICE_PRODUCT_ID=your_nice_product_id
# 선택: 고정 토큰(권장 X). 없으면 clientId/secret로 자동 발급됩니다.
NICE_ACCESS_TOKEN=
# NICE 콜백 returnUrl (상대경로/절대경로 모두 가능)
NICE_RETURN_URL=/api/auth/nice/callback
# 디버그용: NICE 콘솔에 등록한 returnUrl을 그대로 넣으면 문자 단위 일치 여부를 서버 로그로 비교해줍니다.
NICE_CONSOLE_RETURN_URL=https://your-domain.com/api/auth/nice/callback

# NICE 표준창 액션 URL (client에서 사용 가능: 공개값)
NEXT_PUBLIC_NICE_STANDARD_POPUP_ACTION=https://nice.checkplus.co.kr/CheckPlusSafeModel/service.cb

# Debug (Vercel egress IP 확인용) - 운영에선 사용 후 꺼주세요
DEBUG_EGRESS_IP=false
# 선택: 토큰을 설정하면 /api/debug/egress-ip?token=... 로만 조회 가능
DEBUG_EGRESS_IP_TOKEN=

# (legacy) 예전 키명 - 더 이상 사용하지 않으면 제거 가능
NICEPAY_CLIENT_ID=your_nicepay_client_id
NICEPAY_CLIENT_SECRET=your_nicepay_client_secret
NICEPAY_MOCK_MODE=true